<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="root" prefHeight="500" prefWidth="500" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.univalle.battleship.controller.OpponentController">

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Opponent Board â€“ Fire!" textFill="#0d3242" />

                <Button fx:id="btnSaveExit" onAction="#handleSaveExit" style="-fx-background-color: #fce677; -fx-border-color: #f5be33; -fx-font-size: 12px;" text="Guardar y salir" textFill="#d06800" />
            </children>
        </HBox>
    </top>

    <!-- Center board -->
    <center>
        <GridPane fx:id="opponentBoard"
                  alignment="CENTER"
                  hgap="1"
                  vgap="1"
                  style="-fx-background-color: #254666;">

            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- COLUMNAS -->
            <columnConstraints>
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
                <ColumnConstraints minWidth="40" prefWidth="40" maxWidth="40" />
            </columnConstraints>

            <!-- FILAS -->
            <rowConstraints>
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
                <RowConstraints minHeight="40" prefHeight="40" maxHeight="40" />
            </rowConstraints>

        </GridPane>
    </center>

    <!-- Bottom legend -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-font-family: 'Bookman Old Style'; -fx-font-size: 12px; -fx-text-fill: #0d3242;">

            <!-- Hit -->
            <ImageView fitHeight="20" fitWidth="20">
                <image>
                    <Image url="@edu/univalle/battleship/images/hit.png" />
                </image>
            </ImageView>

            <!-- Miss -->
            <ImageView fitHeight="20" fitWidth="20">
                <image>
                    <Image url="@edu/univalle/battleship/images/miss.png" />
                </image>
            </ImageView>

            <!-- Sunk -->
            <ImageView fitHeight="20" fitWidth="20">
                <image>
                    <Image url="@edu/univalle/battleship/images/sink.png" />
                </image>
            </ImageView>
        </HBox>
    </bottom>

</BorderPane>
