<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="650" prefWidth="800" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.univalle.battleship.controller.PositionController">

    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #bdeaff; -fx-font-family: 'Bookman Old Style';">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label style="-fx-font-size: 24px;" text="Posiciona tu flota - Tablero del Jugador" textFill="#0d3242" />

                <Button fx:id="btnOrientation" style="-fx-background-color: #fce677; -fx-border-color: #f5be33; -fx-font-size: 12px;" text="Vertical" textFill="#d06800" />
            </children>
        </HBox>
    </top>

    <center>
        <GridPane fx:id="playerBoard" alignment="CENTER" hgap="1" style="-fx-background-image: url('/edu/univalle/battleship/images/fondo.png'); -fx-background-repeat: no-repeat; -fx-background-position: center center; -fx-background-size: cover; -fx-background-color: #254666;" vgap="1">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </GridPane>
    </center>

    <bottom>
        <HBox fx:id="fleetBox" alignment="CENTER" spacing="15" style="-fx-background-color: #bdeaff; -fx-font-family: 'Bookman Old Style';">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button fx:id="btnStartGame" onAction="#handleStartGame" style="-fx-border-color: #f5be33; -fx-background-color: #fce677; -fx-font-size: 12px;" text="Iniciar juego" textFill="#d06800" visible="false" />
        </HBox>
    </bottom>


</BorderPane>
